@model NguyenCongTung_2310900051_Project2.Models.KhachHang

@{
Layout = "_LayoutAdmin";
    ViewData["Title"] = "Chỉnh sửa khách hàng";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Chỉnh sửa thông tin khách hàng</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="MaKhachHang" class="form-label fw-bold"></label>
                            <input asp-for="MaKhachHang" class="form-control" placeholder="Nhập mã khách hàng" />
                            <span asp-validation-for="MaKhachHang" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="HoTen" class="form-label fw-bold"></label>
                            <input asp-for="HoTen" class="form-control" placeholder="Nhập họ và tên" />
                            <span asp-validation-for="HoTen" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold"></label>
                            <input asp-for="Email" class="form-control" placeholder="Nhập email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DienThoai" class="form-label fw-bold"></label>
                            <input asp-for="DienThoai" class="form-control" placeholder="Nhập số điện thoại" />
                            <span asp-validation-for="DienThoai" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DiaChi" class="form-label fw-bold"></label>
                            <input asp-for="DiaChi" class="form-control" placeholder="Nhập địa chỉ" />
                            <span asp-validation-for="DiaChi" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
