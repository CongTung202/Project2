@model IEnumerable<NguyenCongTung_2310900051_Project2.Models.KhachHang>

@{
    Layout = "_LayoutAdmin";   // Nếu có layout admin thì dùng
    ViewData["Title"] = "Danh sách khách hàng";
}

<div class="container mt-4">
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="bi bi-people-fill"></i> @ViewData["Title"]</h4>
                <div>
                    <a asp-action="Create" class="btn btn-light btn-sm me-2">
                        <i class="bi bi-plus-circle"></i> Thêm khách hàng
                    </a>
                    <!-- Bạn có thể thêm ô tìm kiếm ở đây -->
                    <form asp-action="Index" method="get" class="d-inline">
                        <input type="text" name="search" class="form-control form-control-sm d-inline-block w-auto"
                               placeholder="Tìm kiếm..." />
                        <button type="submit" class="btn btn-outline-light btn-sm">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-circle"></i> Chưa có khách hàng nào trong hệ thống.
                </div>
            }
            else
            {
                <table class="table table-striped table-bordered align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.MaKhachHang)</th>
                            <th>@Html.DisplayNameFor(model => model.HoTen)</th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>@Html.DisplayNameFor(model => model.DienThoai)</th>
                            <th>@Html.DisplayNameFor(model => model.DiaChi)</th>
                            <th class="text-center" style="width:220px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.MaKhachHang)</td>
                                <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.DienThoai)</td>
                                <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm mx-2">
                                            <i class="bi bi-eye"></i>Xem
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mx-2">
                                            <i class="bi bi-pencil-square"></i>Sửa
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mx-2">
                                            <i class="bi bi-trash"></i>Xóa
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
