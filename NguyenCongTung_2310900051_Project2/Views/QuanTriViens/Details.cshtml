@model NguyenCongTung_2310900051_Project2.Models.QuanTriVien

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Chi tiết quản trị viên";
}

<div class="container mt-4">
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="bi bi-person-badge"></i> @ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.TaiKhoan)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TaiKhoan)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.MatKhau)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MatKhau)
                </dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-info text-white">
                <i class="bi bi-pencil-square"></i> Chỉnh sửa
            </a>
        </div>
    </div>
</div>
