@model NguyenCongTung_2310900051_Project2.Models.QuanTriVien

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Xóa quản trị viên";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger rounded-3">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> @ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger mb-3">Bạn có chắc chắn muốn xóa tài khoản này?</h5>

            <dl class="row">
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.TaiKhoan)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TaiKhoan)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.MatKhau)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MatKhau)
                </dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Xóa
                </button>
            </form>
        </div>
    </div>
</div>
