@model NguyenCongTung_2310900051_Project2.Models.LoaiSanPham

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Thêm loại sản phẩm";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="card shadow-sm rounded-3">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="MaLoai" class="form-label"></label>
                    <input asp-for="MaLoai" class="form-control" placeholder="Nhập mã loại..." />
                    <span asp-validation-for="MaLoai" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TenLoai" class="form-label"></label>
                    <input asp-for="TenLoai" class="form-control" placeholder="Nhập tên loại..." />
                    <span asp-validation-for="TenLoai" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
