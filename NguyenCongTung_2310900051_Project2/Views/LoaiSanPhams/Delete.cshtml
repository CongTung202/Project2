@model NguyenCongTung_2310900051_Project2.Models.LoaiSanPham

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Xóa loại sản phẩm";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0 text-danger"><i class="bi bi-trash"></i> @ViewData["Title"]</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="alert alert-warning" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i>
        Bạn có chắc chắn muốn xóa loại sản phẩm này không?
    </div>

    <div class="card shadow-sm rounded-3 mb-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.MaLoai)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MaLoai)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.TenLoai)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TenLoai)
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="d-flex justify-content-end gap-2">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Xóa
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-x-circle"></i> Hủy
        </a>
    </form>
</div>
