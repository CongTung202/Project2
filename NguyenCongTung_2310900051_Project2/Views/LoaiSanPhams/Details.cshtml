@model NguyenCongTung_2310900051_Project2.Models.LoaiSanPham

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Chi tiết loại sản phẩm";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="card shadow-sm rounded-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.MaLoai)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MaLoai)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.TenLoai)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TenLoai)
                </dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-end gap-2 mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning text-dark">
            <i class="bi bi-pencil-square"></i> Sửa
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-list"></i> Danh sách
        </a>
    </div>
</div>
