@model Project2_QuanLyTapHoa.Models.ChiTietHoaDonDto

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaCthd" />

    <div class="form-group">
        <label>Hóa đơn</label>
        <select asp-for="MaHd" class="form-control" asp-items="@(ViewData["MaHd"] as SelectList)" disabled></select>
    </div>

    <div class="form-group">
        <label>Sản phẩm</label>
        <select asp-for="MaSp" class="form-control" asp-items="@(ViewData["MaSp"] as SelectList)" disabled></select>
    </div>

    <div class="form-group">
        <label asp-for="SoLuong"></label>
        <input asp-for="SoLuong" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DonGia"></label>
        <input asp-for="DonGia" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ThanhTien"></label>
        <input asp-for="ThanhTien" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
