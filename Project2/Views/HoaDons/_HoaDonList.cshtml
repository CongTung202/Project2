@model IEnumerable<Project2.Models.HoaDon>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Mã HĐ</th>
            <th>Ngày lập</th>
            <th>Tổng tiền</th>
            <th>Khách hàng</th>
            <th>Sản phẩm</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaHd</td>
                <td>@item.NgayLap.ToString("dd/MM/yyyy")</td>
                <td>@item.TongTien</td>
                <td>@item.MaKhNavigation?.MaKh</td>
                <td>@item.MaSpNavigation?.MaSp</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MaHd" class="btn btn-info btn-sm">Xem</a>
                    <a asp-action="Edit" asp-route-id="@item.MaHd" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaHd" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
