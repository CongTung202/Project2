@model Project2.Models.HoaDon

@{
    ViewData["Title"] = "Chi tiết hóa đơn";
}

<h2>Chi tiết hóa đơn</h2>

<div>
    <h4>Hóa đơn #@Model.MaHd</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Ngày lập</dt>
        <dd class="col-sm-9">@Model.NgayLap.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">Tổng tiền</dt>
        <dd class="col-sm-9">@Model.TongTien</dd>

        <dt class="col-sm-3">Khách hàng</dt>
        <dd class="col-sm-9">@Model.MaKhNavigation?.MaKh</dd>

        <dt class="col-sm-3">Sản phẩm</dt>
        <dd class="col-sm-9">@Model.MaSpNavigation?.MaSp</dd>

        <dt class="col-sm-3">Trạng thái</dt>
        <dd class="col-sm-9">@Model.TrangThai</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Quay lại</a>
